{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pip install -r requirements-prod.txt"
  },
  "deploy": {
    "startCommand": "python -c \"import os; os.system(f'gunicorn app:app --bind 0.0.0.0:{os.getenv(\\\"PORT\\\", \\\"8080\\\")} --workers 2 --threads 4 --timeout 120 --log-file -')\"",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
